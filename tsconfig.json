{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "declaration": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "ES2019",
    "types": ["@cloudflare/workers-types"],
    "lib": ["ESNext", "WebWorker"],
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules/", "dist/", "src/**/*.test.*"]
}
