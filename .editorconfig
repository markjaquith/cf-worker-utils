# editorconfig.org

root = true

# Default
[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Trailing whitespace is meaningful in Markdown
[*.md]
trim_trailing_whitespace = false
indent_style = space

# Usually we want 2 spaces for json and yml files
[*.{yml,json}]
indent_size = 2
indent_style = space
